<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/frutaImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/frutaName"
        android:layout_width="217dp"
        android:layout_height="34dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="KIA RIO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frutaImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frutaValue"
        android:layout_width="217dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:text="1000"
        app:layout_constraintStart_toEndOf="@+id/frutaImageView"
        app:layout_constraintTop_toBottomOf="@+id/frutaName" />

    <TextView
        android:id="@+id/frutaSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="2018"
        app:layout_constraintStart_toEndOf="@+id/frutaImageView"
        app:layout_constraintTop_toBottomOf="@+id/frutaValue" />

    <TextView
        android:id="@+id/frutaShaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="1250"
        app:layout_constraintStart_toEndOf="@+id/frutaSize"
        app:layout_constraintTop_toBottomOf="@+id/frutaValue" />
</androidx.constraintlayout.widget.ConstraintLayout>